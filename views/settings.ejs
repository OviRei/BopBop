<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/profile.css">
    <link rel="stylesheet" href="/css/navbar.css">

    <title>BopBop</title>
</head>

<body>
    <!-- Navbar -->
    <%- include('./partials/navbar-2'); %>
    <br><br><br><br><br><br>

    <!-- Settings -->
    <div class="card mb-3 sections mx-auto" style="width: 40rem;">
        <div class="card-body">
            <h5 class="card-title"><b>Settings</b></h5>

            <!-- Change username -->
            <div class="card text-white bg-danger" style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title">Change username</h5>
                    <form class="settings-form" action="/auth/settings/changeusername" method="POST">
                        <div class="input-group">
                            <textarea type="text" name="username" style="display: none;" required><%= session.username %></textarea>

                            <input type="text" name="newUsername" class="form-control" placeholder="<%= session.username %>" aria-label="Username" aria-describedby="basic-addon1" required>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-success">Save</button>
                    </form>
                </div>
            </div>
            <br>

            <!-- Change email -->
            <div class="card text-white bg-danger" style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title">Change email</h5>
                    <form class="settings-form" action="/auth/settings/changeusername" method="POST">
                        <div class="input-group">
                            <textarea type="text" name="username" style="display: none;" required><%= session.username %></textarea>

                            <input type="text" name="newUsername" class="form-control" placeholder="<%= session.email %>" aria-describedby="basic-addon1" required>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-success">Save</button>
                    </form>
                </div>
            </div>
            <br>

            <!-- Change password -->
            <div class="card text-white bg-danger" style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title">Change password</h5>
                    <form class="settings-form" action="/auth/settings/changepassword" method="POST">
                        <textarea type="text" name="username" style="display: none;"><%= session.username %></textarea>

                        <input type="password" name="newPassword" class="form-control" placeholder="New Password" aria-describedby="basic-addon1" required>
                        <br>
                        <h5 class="card-title">Retype password</h5>
                        <input type="password" name="newPasswordConfirm" class="form-control" placeholder="Retype New Password" aria-describedby="basic-addon1" required>
                        <br>
                        <button type="submit" class="btn btn-success">Save</button>
                    </form>
                </div>
            </div>
            <br>

            <!-- Change profile picture -->
            <div class="card text-white bg-danger" style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title">Change profile picture</h5>
                    <form class="settings-form" action="/auth/settings/changeavatar" method="POST">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01" required>
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                        <br><br>
                        <button type="submit" class="btn btn-success">Save</button>
                    </form>
                </div>
            </div>
            <br>

            <!-- Change bio -->
            <div class="card text-white bg-danger" style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title">Change bio</h5>
                    <form class="settings-form" action="/auth/settings/changebio" method="POST">
                        <div class="input-group">
                            <textarea type="text" name="username" style="display: none;" required><%= session.username %></textarea>

                            <textarea class="form-control" type="text" name="newBio" required><%= userInfo[0].bio %></textarea>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-success">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/profile.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
    </script>
</body>

</html>